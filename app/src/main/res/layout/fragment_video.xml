<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.huqx.myapplication.VideoFragment">
   <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_screen"
    >
   <VideoView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/vv_player"
    android:layout_marginTop="90dp"
    android:layout_marginBottom="190dp"
     android:layout_centerVertical="true"
    />
    <ImageButton
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:id="@+id/ib_controller"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:src="@drawable/detail_play"
      android:scaleType="fitCenter"
      android:background="@android:color/transparent"
      />
   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/vv_player"
    android:layout_alignParentBottom="true"
     android:id="@+id/rl_play_controller"
    >
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_start"
      android:layout_marginLeft="10dp"
      android:text="00:00"
      />
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/tv_start"
        android:layout_marginLeft="15dp">

      <android.support.v7.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ac_process"
        android:layout_marginRight="60dp"

      />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tv_end"
          android:text="00:00"
          android:layout_marginRight="20dp"
          android:layout_alignParentRight="true"
          />
     </RelativeLayout>


  </RelativeLayout>
  </RelativeLayout>
</FrameLayout>
